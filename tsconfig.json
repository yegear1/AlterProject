{
  "compilerOptions": {
    "target": "es2022",                          
    "module": "nodenext",  
    "moduleResolution": "nodenext",                 
    "lib": ["es2022"],                   
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true 
  }
}